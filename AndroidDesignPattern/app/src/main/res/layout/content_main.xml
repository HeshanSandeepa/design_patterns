<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:layout_weight="1"
            android:id="@+id/min"
            android:name="com.heshan.androiddesignpattern.observer.MinimalSubscriberFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <androidx.fragment.app.FragmentContainerView
            android:layout_weight="1"
            android:id="@+id/mod"
            android:name="com.heshan.androiddesignpattern.observer.ModerateSubscriberFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <androidx.fragment.app.FragmentContainerView
            android:layout_weight="1"
            android:id="@+id/detail"
            android:name="com.heshan.androiddesignpattern.observer.DetailedSubscriberFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>